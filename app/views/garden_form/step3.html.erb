<h1 class="titre-form">Créer un nouveau potager - Étape 3</h1>
<div class="formulaire-du-potager">
<%= form_for @garden, data: {turbo: false}, url: step4_garden_form_index_path do |f| %>
  <%= f.label :Exposition %>
  <%= f.select :exposition, ['Pas de soleil', 'Soleil le matin', 'Soleil le midi', 'Soleil en après midi'] %>
  <%= f.submit 'Next' %>
<% end %>

</div>
