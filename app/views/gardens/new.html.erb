
  <h1 class = "titre-form">Créer un nouveau potager</h1>
<div class= "container">
    <div class= 'formulaire-du-potager'>
    <%= form_with model: @garden do |f| %>
    <%= f.label :Nom %>
    <%= f.text_field :name %>
    <%= f.label :Adresse %>
    <%= f.text_field :address %>
    <%= f.label :Taille %>
    <%= f.select :size, options_for_select(['Jardinière', 'Bac potager', 'Potager partagé']) %>
    <%= f.label :Exposition %>
    <%= f.select :exposition, options_for_select(['Pas de soleil', 'Soleil le matin', 'Soleil le midi', 'Soleil en après-midi']) %>
    <%= f.submit 'Créer mon potager'%>
    <% end %>
    </div>
</div>
